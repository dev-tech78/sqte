{% extends 'base.html.twig' %}

{% block title %}Commentaire!{% endblock %}

{% block body %}
 <div class="bg-light p-5" id="comment">
                    <h3 class="text-uppercase mb-4">LAISSEZ UN COMMENTAIRE</h3>
                         {% if commentForm is defined %} 
                        {{ form_start(commentForm, {'attr': {'novalidate': 'novalidate'}}) }}
                        {# {{ form_errors(form) }} #}
                        <div class="row g-3">
                            <div class="col-12 col-sm-6">
                                 {{form_row(commentForm.email) }}
                            </div>
                            
                            <div class="col-12 col-sm-6">
                                 {{form_row(commentForm.nom) }}
                            </div> 
                            <div class="col-12">
                                  {{form_row(commentForm.content) }}
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">LAISSEZ UN COMMENTAIRE</button>
                            </div>
                        </div>
                   
                          {{form_end(commentForm)}}
                     {% endif %} 
                </div> 
{% endblock %}
