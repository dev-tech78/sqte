{% extends 'baseback.html .twig' %}

{% block title %}Radio!
{% endblock %}

{% block body %}


	
	
			<main>
				<div class="container-fluid px-4">

                    <br><br>
					<h1 class="mt-4 text-center">
						Ajouter une categorie !
					</h1>
					<div class="container">
						<br><div class="mb-3">
							{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
							<div class="row">
							<div class="col-6">{{ form_row(form.nom) }}</div>
                            <div class="col-6">{{ form_row(form.soustitre) }}</div>
							 <div class="col-6">{{ form_row(form.action) }}</div>
							</div>
							
						</div>
						
						
						<div class="form-group" id="editor">
							{{ form_row(form.content , {'attr': {'placeholder': "Titre de l'article"}}) }}
							
						</div>

						
						<div class="mb-3">
							<button type="submit" class="btn btn-success">
								{% if editMode %}
									Enregistrer
								{% else %}
									Ajouter l'article

								{% endif %}

							</button>
						</div>


						{{ form_end(form) }}


					</div>
				</main>


			{% endblock %}
{% block javascripts   %}

		 <script> 
			$(document).ready(function() {
				$('.select2').select2();
			});
			</script>
{% endblock %}
