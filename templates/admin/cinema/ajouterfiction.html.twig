{% extends 'baseback.html .twig' %}

{% block title %}Radio!
{% endblock %}

{% block body %}


	
		<div id="layoutSidenav_content">
			<main>
				<div class="container-fluid px-4">

                    <br><br>
					<h1 class="mt-4 text-center">
						Cr√©ation d'une fiction !
					</h1>
					<div class="container">
						<br><div class="mb-3">
							{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
							{{ form_row(form.title, {'attr': {'placeholder': "Titre de l'article"}}) }}
							{{ form_row(form.type, {'attr': {'placeholder': "Titre de l'article"}}) }}
						</div>
						<div class="form-group">
							{{ form_row(form.categoriFiction , {'attr': {'placeholder': "Titre de l'article"}}) }}

						</div>
						<div class="form-group">

							{{ form_row(form.content , {'attr': {'placeholder': "le contenu de l'article"}}) }}
						</div>

						<div class="form-group">
							{{ form_row(form.image , {'attr': {'placeholder': "Image de l'article"}}) }}
						</div>
						<div class="mb-3">
							<button type="submit" class="btn btn-success">
								{% if editMode %}
									Enregistrer
								{% else %}
									Ajouter l'article

								{% endif %}

							</button>
						</div>


						{{ form_end(form) }}

						
					</div>
				</main>


			{% endblock %}
