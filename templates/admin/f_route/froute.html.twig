{% extends 'baseback.html .twig' %}

{% block title %}Radio!
{% endblock %}

{% block body %}


	
		
			<main>
				<div class="container">
 
      <h1 class="text-center">La Liste des articles </h1>
      
        <a href="{{ path('app_actu') }}" class="btn btn-primary">Ajouter un article</a><br>
     <br><br>
   <table class="table table-bordered border-primary">

  <thead>
    <tr>
     <th scope="col">Titre</th>
    <th scope="col">Date </th>
    <th scope="col">Contenu</th>
    <th scope="col">image</th>
    <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {# <td data-label="image"><img src="{{ asset('/upload/galerie/' ~ articles.image )}}" 
                            class="img-fluid" alt="..." style="height: 150px; width: 130px;"></td> #}
   {#% for anonnces in app.user.adverTs %#}
   {%  for articles in actualite %}
    <tr  {% if loop.index is odd %} info {% else %} warning {% endif  %} >
      <td data-label="Titre">{{articles.title }}</td>
      <td data-label="Date">{{articles.createdAt | date('d/m/y')}} à: {{ articles.createdAt | date('H:i') }} </td>
      <td data-label="Contenu">{{articles.content|u.truncate(255, '...')|raw }}</td>
     <td data-label="image"><img src="{{ asset('/upload/galerie/' ~ articles.image )}}" 
                            class="img-fluid" alt="..." style="height: 150px; width: 130px;"></td> 
      <td data-label="Action">
      <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Action
</button>
<div class="btn-group" role="group">
<button id="btnGroupDrop4" type="button" class="btn btn-danger dropdown-toggle"  data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                  <div class="dropdown-menu" aria-labelledby="btnGroupDrop4">
                    <a class="dropdown-item" href="{{ path('edit.actu',{'id': articles.id}) }}"><i class="fa-solid fa-user-pen"></i>Modifier</a>
                    <a class="dropdown-item"   href="{{path('app_deletarticle',{'id': articles.id})}}" data-bs-toggle="modal" data-bs-target="#exampleModal2{{articles.id}}" >Suprrimer</a>
                  
                  </div>
                </div>
<!-- Modal -->
<div class="modal fade" id="exampleModal2{{articles.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content" id="useraction">
      <div class="modal-header">
        
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
       Vous étre sur le point de supprimer l'émissions : {{articles.id}} titre,{{articles.title}} ?
       <img src="{{ asset('/upload/galerie/' ~ articles.image )}}" 
                            class="img-fluid" alt="..." style="height: 450px; width: 330px;">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
        	<a type="button" href="{{path('app_deletarticle',{'id': articles.id})}}" class="btn btn-primary">Suprrimer</a>
      </div>
    </div>
  </div>
</div>
      </td>
    </tr>
    
    {% endfor %}
    
  </tbody>
</table>

     </div>
				</main>


			{% endblock %}
