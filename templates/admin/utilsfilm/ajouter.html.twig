<div class="container">
						<br><div class="mb-3">
							{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
							{{ form_row(form.nom, {'attr': {'placeholder': "Titre de l'article"}}) }}
							
						</div>
					
						

						<div class="form-group">
							{{ form_row(form.image , {'attr': {'placeholder': "Image de l'article"}}) }}
						</div>
						<div class="mb-3">
							<button type="submit" class="btn btn-success">
								{% if editMode %}
									Enregistrer
								{% else %}
									Ajouter l'article

								{% endif %}

							</button>
						</div>


						{{ form_end(form) }}


					</div>