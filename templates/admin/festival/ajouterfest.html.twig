{% extends 'baseback.html .twig' %}

{% block title %}Radio!
{% endblock %}

{% block body %}


	
		<div id="layoutSidenav_content">
			<main>
				<div class="container-fluid px-4">

                    <br><br>
					<h1 class="mt-4 text-center">
						Cr√©ation de Festival !
					</h1>
					<div class="container">
						<br><div class="mb-3">
							{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
							<div class="row">
								<div class="col">{{ form_row(form.titel, {'attr': {'placeholder': "Titre de l'article"}}) }}</div>
								<div class="col">{{ form_row(form.authore, {'attr': {'placeholder': "Titre de l'article"}}) }}</div>
							</div>
