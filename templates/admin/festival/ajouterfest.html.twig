							<div class="col-4"><p><a href="{{path('festival_image.add')}}">Ajouter les photos de festival</a></p></div>
							</div>
							
							
						</div>
					
						<div class="form-group">

							{{ form_row(form.discription , {'attr': {'placeholder': "le contenu de l'article"}}) }}
						</div>

						
						<div class="mb-3">
							<button type="submit" class="btn btn-success">
								{% if editMode %}
									Enregistrer
								{% else %}
									Ajouter l'article

								{% endif %}

							</button>
						</div>

						
						{{ form_end(form) }}


					</div>
				</main>


			{% endblock %}

